<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.chip.ChipGroup xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <com.google.android.material.chip.Chip
       android:background="@drawable/rounded_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        chip.isCloseIconEnabled = "true"
        android:text="fgfggdfggfggfdgdfgdf"/>
 <com.google.android.material.chip.Chip
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         app:chipIcon="@drawable/logo"
     chip.isCloseIconEnabled = "false"
        android:text="fgfgfgfggfgfgfggfgfgfdgfg"/>
 <com.google.android.material.chip.Chip
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""/>
    <com.google.android.material.chip.Chip
        android:id="@+id/chip4"
        style="@style/Widget.MaterialComponents.Chip.Choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chip_text" />

</com.google.android.material.chip.ChipGroup>